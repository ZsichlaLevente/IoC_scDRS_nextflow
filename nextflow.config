params {
    GWAS_panel = false
}

process {
    executor = 'local'
}

docker {
    enabled = true
}

workflow {
    report {
        enabled = true
        file = 'results/report/report.html'
        overwrite = true
    }

    stats {
        enabled = true
        file = 'results/report/stats.html'
        overwrite = true
    }

    trace {
        enabled = true
        file = 'results/report/trace.txt'
        overwrite = true
    }

    timeline {
        enabled = true
        file = 'results/report/timeline.html'
        overwrite = true
    }

    dag {
        enabled = true
        file = 'results/report/dag.dot'
        overwrite = true
    }

    log {
        level = 'INFO'
        file = 'results/report/nextflow.log'
        overwrite = true
    }

    cleanup = true
}

log {
  level = 'DEBUG'
}